<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_packaging_type_form_easywater">
            <field name="name">Packaging Type</field>
            <field name="model">easywater.packaging.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Packaging Type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="weight"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                            </group>
                        </group>
                        <group>
                            <field name="product_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <record model="ir.ui.view" id="packaging_type_tree_easywater">
        <field name="name">packaging.type.tree.easywater</field>
        <field name="model">easywater.packaging.type</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
            </tree>
        </field>
    </record>

    <record id="packaging_type_list_action" model="ir.actions.act_window">
        <field name="name">Packaging Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">easywater.packaging.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="packaging_type_tree_easywater"/>
    </record>

    <menuitem id="packaging_types_menu" name="Packaging Types"
                  parent="stock.menu_stock_config_settings"
                  action="easywater_stock.packaging_type_list_action"
                  sequence="100"
                  active="1"/>
</odoo>