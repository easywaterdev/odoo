<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="mail.Chatter" t-inherit-mode="extension">
        <xpath expr="//div[@class='o_Chatter_fixedPanel']" position="attributes">
            <attribute name="t-if">!chatter.previewMessageId</attribute>
        </xpath>
        <xpath expr="//ThreadView" position="attributes">
            <attribute name="previewMessageId">chatter.previewMessageId</attribute>
        </xpath>
    </t>
</templates>
