<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Update the existing view by inheriting the product.template model -->
        <record id="view_product_template_form" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_label_layout']" position="replace">
                    <button name="print_label" string="Print Label" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
