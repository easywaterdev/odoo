<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		 <record id="action_view_mail_message_send" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">mail.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="mail.view_message_search"/>
        </record> 
        
		
		 <record id="action_view_mail_message_recieve" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">mail.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_ids', 'in',[active_id])]</field>
            <field name="search_view_id" ref="mail.view_message_search"/>
        </record> 
		
		
		<record id="res_partner_view_buttons_inherit" model="ir.ui.view">
			<field name="name">res.partner.view.buttons</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="priority" eval="20" />
			<field name="arch" type="xml">
				<div name="button_box" position="inside">
					<button class="oe_stat_button" type="object"
					name = "action_view_send_mail"
						icon="fa-mail-forward" attrs="{'invisible': [('send_mail_count', '=', 0)]}">
						<field name="send_mail_count" widget="statinfo" string="Send Mails" />
					</button>
					<button class="oe_stat_button" type="object"
					name="action_view_recieve_mail"
						icon="fa-mail-reply" attrs="{'invisible': [('receive_mail_count', '=', 0)]}">
						<field name="receive_mail_count" widget="statinfo" string="Received Mails" />
					</button>
				</div>
			</field>
		</record>

	</data>
</odoo>
